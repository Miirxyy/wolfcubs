<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="650.0" prefWidth="847.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="warewolfculb.LobbyInterfaceController">
    <children>
      <BorderPane opacity="0.91" prefHeight="95.0" prefWidth="630.0" style="-fx-background-color: lightgrey;">
         <opaqueInsets>
            <Insets bottom="2.0" />
         </opaqueInsets>
         <center>
            <Label text="LOBBY" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Elephant" size="40.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
      <TabPane prefHeight="532.0" prefWidth="847.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Games">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                          <Button layoutX="13.0" layoutY="14.0" onAction="#createRoomButtonClicked" text="Create New Room" />
                          <Button layoutX="13.0" layoutY="66.0" onAction="#joinRoomButtonClicked" text="Join Public Room" />
                           <TextField fx:id="roomCodeField" layoutX="13.0" layoutY="101.0" promptText="Enter room code" />
                           <Button layoutX="171.0" layoutY="101.0" onAction="#joinWithCodeButtonClicked" text="Join with Code" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Rules">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="RULES" editable="false" prefHeight="311.0" prefWidth="814.0" wrapText="true" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
                           <padding>
                              <Insets top="5.0" />
                           </padding>
                        </TextArea>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
        <HBox spacing="5" />    
    </children>
</VBox>
